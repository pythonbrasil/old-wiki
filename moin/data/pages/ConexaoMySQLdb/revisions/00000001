#!/usr/bin/python

# Importa o mÃ³dulo do MySQL

import MySQLdb

# Conectando

db = MySQLdb.connect(host="ipOuNomeServidor", user="usuariobanco", passwd="senha", db="nomeDaBase")

# Cria um cursor

cursor = db.cursor()

# Executa o SQL

cursor.execute("SELECT * FROM tabela")

# Pega o resultset como uma tupla

